datasource db {
  provider = "sqlite" 
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

enum Status {
  STARTED
  WORKING
  COMPLETED
  CANCELLED
  FINISHED
}
model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  clientName  String
  clientEmail String
  amountHourly Float
  timeWorked  Int
  status      Status   @default(STARTED)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
